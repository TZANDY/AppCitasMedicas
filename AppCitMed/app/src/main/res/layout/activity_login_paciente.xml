<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/g2_celestecrema"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/paciente2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

                <EditText
                    android:id="@+id/edt_dni_aseg"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="DNI"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:textSize="17dp" />


        </LinearLayout>

        <!-- ######################################################-->
        <!-- ######################################################-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edt_clave_aseg"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:hint="CLAVE"
                android:inputType="textPassword"
                android:textAlignment="center"

                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">



        </LinearLayout>

        <!-- ######################################################-->
        <!-- ######################################################-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_acep_aseg"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Aceptar" />

            <TextView
                android:id="@+id/tv_registrarAsegurado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="GENERAR MI CLAVE"
                android:textSize="16dp"
                android:textColor="@color/negro1"
                android:textStyle="bold" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="150dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/negro1"
            android:textStyle="italic"
            android:textSize="17dp"
            android:text="*Recuerde que debe estar inscrito y vigente su seguro EsSalud*"/>


    </LinearLayout>
</LinearLayout>