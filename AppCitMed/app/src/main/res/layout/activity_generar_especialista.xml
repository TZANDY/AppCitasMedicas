<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
    android:background="@color/g1_blancocrema"
        >
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:text="ESPECIALISTA"
            android:textColor="@color/negro1"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/edt_dni_esp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="DNI"
            android:inputType="number"
            android:textStyle="bold"
            android:background="@color/gris1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/btn_buscar_esp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />


        <TextView
            android:id="@+id/tv_dni_esp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@color/g2_verdeopaco"
            android:text=" - "
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_nombre_esp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text=" - "
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            android:background="@color/g2_celestecrema"
            />

        <TextView
            android:id="@+id/tv_apellido_esp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text=" - "
            android:textSize="20dp"
            android:background="@color/g2_verdecrema"
            android:textColor="@color/blanco"
            />

           <EditText
               android:id="@+id/edt_clv_esp"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="10dp"
               android:hint="@string/lbl_clave"
               android:inputType="textPassword" />

           <EditText
               android:id="@+id/edt_repclv_esp"
               android:layout_height="wrap_content"
               android:layout_width="fill_parent"
               android:layout_marginTop="10dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:inputType="textPassword"
               android:hint="Repita Clave"
               />

        <Button
            android:id="@+id/btn_generar_especialista"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="210dp"
            android:background="@color/naranja2"
            android:textColor="@color/g1_blancocrema"
            android:onClick="onClick"
            android:text="Registrar" />
    </LinearLayout>

    </ScrollView>
    </LinearLayout>

