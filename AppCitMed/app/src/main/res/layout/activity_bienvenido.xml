<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:gravity="center">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/icon4" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="20dp"
        android:textColor="@color/negro1"
        android:text="Â¡Bienvenido!"/>

    <Button
        android:id="@+id/btn_paciente"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Paciente"
        android:textColor="@color/g1_blancocrema"
        android:background="@color/g2_celestecrema"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btn_especialista"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Especialista"
        android:textColor="@color/g1_blancocrema"
        android:background="@color/g1_rojooscuro"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_administrador"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/negro1"
        android:text="ADMINISTRADOR"
        android:textColor="@color/g1_blancocrema"
        android:layout_marginTop="10dp"/>

</LinearLayout>