<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/g1_blancocrema"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:text="ESPECIALISTA"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_dni"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:hint="DNI"
        android:textStyle="bold"
        android:background="@color/gris1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/tv_dni"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="DNI"
        android:textAlignment="center"
        android:background="@color/g2_celestecrema"
        android:textSize="17dp"
        android:textColor="@color/blanco"
        />
    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="NOMBRE"
        android:textAlignment="center"
        android:textSize="17dp"
        android:textColor="@color/blanco"
        android:background="@color/g2_verdeopaco"
        />


    <TextView
        android:id="@+id/tv_apellido"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="APELLIDO"
        android:textSize="17dp"
        android:textAlignment="center"
        android:background="@color/g2_verdecrema"
        android:textColor="@color/blanco"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sede"
        android:textSize="17dp"
        />
    <Spinner
        android:id="@+id/spn_sede"
        android:entries="@array/spnrSede"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Estado"
        android:textSize="17dp"
        />
    <Spinner
        android:id="@+id/spn_activar"
        android:entries="@array/spnrActivar"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_aceptar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="ACEPTAR"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:background="@color/RojoOscuro"
        />
        </LinearLayout>
    </ScrollView>

</LinearLayout>