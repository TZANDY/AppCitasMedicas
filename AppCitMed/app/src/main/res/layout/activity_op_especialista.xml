<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/g1_blancocrema"
    >
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:text="ACTUALIZAR ESPECIALISTA"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edt_dni_espe"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:hint="DNI"
                android:inputType="number"
                android:textStyle="bold"
                android:background="@color/gris1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/btn_buscar_espe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/tv_dni_espe"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:hint="DNI"
                android:textAlignment="center"
                android:layout_marginEnd="10dp"

                />
            <EditText
                android:id="@+id/edt_nom_espe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:hint="NOMBRE"
                />
            <EditText
                android:id="@+id/edt_ape_espe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="APELLIDO"
                />
            <EditText
                android:id="@+id/edt_correo_espe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="CORREO"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:text="FECHA DE NACIMIENTO"

                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/ib_obtener_fecha"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/calendario"
                    />
                <EditText
                    android:id="@+id/edt_fnacimiento_espe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:layout_marginStart="10dp"
                    android:hint="@string/lbl_fecha"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/edt_celular_espe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="#CELULAR"
                android:inputType="number"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="ESTADO CIVIL"
                android:textSize="18dp"
                />
            <Spinner
                android:id="@+id/spn_ec_esp_op"
                android:entries="@array/spnrEstadoCivil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                >
            </Spinner>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="ESPECIALIDAD"
                />
            <Spinner
                android:id="@+id/spn_espcl_esp_op"
                android:entries="@array/spnrEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                >
            </Spinner>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:text="TURNO"
                />
            <Spinner
                android:id="@+id/spn_horario_esp_op"
                android:entries="@array/spnrTurno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                >
            </Spinner>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="SEDE"
                />
            <ListView
                android:id="@+id/lst_sede_op"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                >
            </ListView>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_actualizar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:textColor="@color/blanco"
                    android:background="@color/verde1"
                    android:text="ACTUALIZAR"
                    />
                <Button
                    android:id="@+id/btn_cancelar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:textColor="@color/blanco"
                    android:background="@color/negro1"
                    android:text="CANCELAR"
                    />
                <Button
                    android:id="@+id/btn_salir"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/salir2"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/RojoOscuro"

                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

